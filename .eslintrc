{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "eqeqeq": "warn",
        "no-fallthrough": "off",
        "no-shadow": "warn",
        "arrow-body-style": ["warn", "as-needed"],
        "arrow-parens": ["warn", "as-needed"],
        "no-var": "error",
        "no-console": 0,
        "no-extra-semi": 1
    },
    "globals": {
        "angular": false
    },
    "env": {
        "browser": true,
        "node": true
    }
}
